# Deny direct access to uploaded files
# Files should only be served through PHP with proper authentication

Order Deny,Allow
Deny from all

# Prevent execution of PHP files in uploads directory
<Files "*.php">
    Order Allow,Deny
    Deny from all
</Files>

# Prevent access to sensitive file types
<FilesMatch "\.(php|php3|php4|php5|phtml|pl|py|jsp|asp|sh|cgi)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>